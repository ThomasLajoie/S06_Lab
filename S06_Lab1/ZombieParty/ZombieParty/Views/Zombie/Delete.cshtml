@model ZombieParty.Models.Zombie
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h4>Zombie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row p-3 ">
            <form asp-action="DeletePost" asp-route-Id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Name" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        @Model.Name
                    </div>
                </div>
                <div class="form-group row">
                   <div class="col-4">
                       <label asp-for="@Model.ShortDesc" class="col-form-label"></label>
                   </div>
                   <div class="col-8">
                        @Model.ShortDesc
                   </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Point" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        @Model.Point
                    </div>
                </div>
             

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.ShortDesc" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Model.ZombieType.TypeName
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4"> </div>
                    <div class="col-4">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
